{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
  },
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"],
      "@src/*": ["src/*"],
      "@main/*": ["src/main/*"],
      "@app/*": ["src/app/*"],
      "@api/*": ["src/app/api/*"],
      "@comp/*": ["src/app/component/*"],
      "@con/*": ["src/app/container/*"],
      "@core/*": ["src/app/core/*"],
      "@db/*": ["src/app/core/db/*"],
      "@i18n/*": ["src/app/core/i18n/*"],
      "@theme/*": ["src/app/core/theme/*"],
      "@lib/*": ["src/app/lib/*"],
      "@page/*": ["src/app/page/*"],
      "@scss/*": ["src/app/scss/*"],
      "@service/*": ["src/app/service/*"],
      "@static/*": ["src/app/static/*"],
      "@icon/*": ["src/app/static/icon/*"],
      "@image/*": ["src/app/static/image/*"],
      "@store/*": ["src/app/store/*"],
      "@styled/*": ["src/app/styled/*"],
      "@test/*": ["src/app/test/*"],
      "@tool/*": ["src/app/tool/*"],
      "@type/*": ["src/app/type/*"],
      "@util/*": ["src/app/util/*"],
    },
  },
  "include": ["src"],
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll",
  ],
}
